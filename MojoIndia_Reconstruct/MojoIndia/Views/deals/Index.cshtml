@section scripts {
    <script>
    $('.showBtnfaq').click(function () {

        if ($(this).hasClass('active')) {
            $(this).removeClass('active');
            $('.hidemefaq').slideUp();
        } else {
            $('.hidemefaq').slideUp();
            $('.showBtnfaq').removeClass('active');
            $(this).addClass('active');
            $(this).next().filter('.hidemefaq').slideDown();
        }
    });
    </script>


    <script>
        $(document).ready(function () {
            changeCls();
         });
    </script>


<script>
    function changeCls() {
            var name="@(Model.ThemeName.Replace(" ", "-").ToString())";
             if(name=="business-class")
            {
                 $("#Cabin").val("3");
                 setPaxDropBox();
            }
             else if (name == "premium-economy")
            {
                 $("#Cabin").val("2");
                 setPaxDropBox();
            }
        }
</script>
