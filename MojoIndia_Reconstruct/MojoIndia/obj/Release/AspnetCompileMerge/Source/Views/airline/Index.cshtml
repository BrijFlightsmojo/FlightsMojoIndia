    <meta name="description" content="@Model.MetaDescription" />
    <meta name="keywords" content="@Model.MetaKeyWord" />
     <link rel="canonical" href="https://www.flightsmojo.in/airline/@(Model.AirlineName.Trim().Replace(" ","-") + "-" + Model.AirlineCode +"-flight-tickets")" />
    <meta name="author" content="Flights Mojo" />
    <meta name="language" content="en" />
    <meta name="robots" content="INDEX, FOLLOW" />
    <meta name="Copyright" content="https://www.flightsmojo.in/" />
